apiVersion: v1
kind: Service
metadata:
  name: spc-public
  namespace: sagasrv-spc
{% if lb_annotations is defined %}
  annotations:
    {{ lb_annotations }}
{% endif %}
  labels:
    app: spc
spec:
  type: LoadBalancer
  selector:
    app: spc
  ports:
    - name: tendermint-p2p
      protocol: TCP
      targetPort: 26656
      port: 26656
