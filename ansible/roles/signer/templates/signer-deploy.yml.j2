apiVersion: v1
kind: Namespace
metadata:
  name: sagasrv-signer
  labels:
    name: sagasrv-signer
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: signer-pvc
  namespace: sagasrv-signer
  labels:
    app: signer
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: {{ signer_volume_size }}
  storageClassName: {{ signer_storage_class }}
{# Only include the Secret if signer_consensus_key_raw.stdout is defined (i.e., we generated a new key) - this avoids overwriting the secret on subsequent runs, preserving the consensus key #}
{% if signer_consensus_key_raw.stdout is defined %}
---
apiVersion: v1
kind: Secret
metadata:
  name: signer-consensus-key
  namespace: sagasrv-signer
type: Opaque
stringData:
  consensus.key: "{{ signer_consensus_key_raw.stdout }}"
{% endif %}
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: signer-config
  namespace: sagasrv-signer
data:
  config.yaml: |
    loglevel: info
    listen_grpc: "0.0.0.0:9090"
    listen_admin: "0.0.0.0:8081"
    work_dir: "/var/signer/"
    consensus_keys:
      keys:
        - chain_id_pattern: ".*"
          provider: "file"
          path: "/var/signer/consensus.key"
    tmkms:
      binary_path: "/usr/local/bin/tmkms"
      grace_period: "5s"
      max_crash_backoff: "5s"
      crash_backoff_step: "1s"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: signer
  namespace: sagasrv-signer
  labels:
    app: signer
spec:
  replicas: 1
  selector:
    matchLabels:
      app: signer
  template:
    metadata:
      labels:
        app: signer
      annotations:
        prometheus.io/scrape: "true"
        prometheus.io/port: "8081"
    spec:
      containers:
        - name: signer
          image: {{ signer_image }}
          args:
            - "--config"
            - "/etc/signer/config.yaml"
          ports:
            - name: grpc
              containerPort: 9090
            - name: admin
              containerPort: 8081
          volumeMounts:
            - name: signer-workdir
              mountPath: "/var/signer/"
            - name: signer-consensus-key
              mountPath: "/var/signer/consensus.key"
              subPath: consensus.key
              readOnly: true
            - name: signer-config
              mountPath: "/etc/signer/config.yaml"
              subPath: config.yaml
              readOnly: true
          readinessProbe:
            httpGet:
              path: /health
              port: 8081
            initialDelaySeconds: 10
            periodSeconds: 10
            timeoutSeconds: 5
            successThreshold: 1
            failureThreshold: 3
          livenessProbe:
            httpGet:
              path: /health
              port: 8081
            initialDelaySeconds: 30
            periodSeconds: 30
            timeoutSeconds: 5
            successThreshold: 1
            failureThreshold: 3
          resources: {{ signer_resources }}
      volumes:
        - name: signer-workdir
          persistentVolumeClaim:
            claimName: signer-pvc
        - name: signer-consensus-key
          secret:
            secretName: signer-consensus-key
        - name: signer-config
          configMap:
            name: signer-config
      restartPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: signer
  namespace: sagasrv-signer
  labels:
    app: signer
spec:
  type: ClusterIP
  selector:
    app: signer
  ports:
    - name: grpc
      protocol: TCP
      port: 9090
      targetPort: 9090
    - name: admin
      protocol: TCP
      port: 8081
      targetPort: 8081
